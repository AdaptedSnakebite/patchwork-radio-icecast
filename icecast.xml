<icecast>
  <location>UK</location>
  <admin>you@patchwork-radio.com</admin>
  <hostname>patchwork.up.railway.app</hostname>

  <limits>
    <clients>100</clients>
    <sources>2</sources>
    <threadpool>5</threadpool>
    <queue-size>524288</queue-size>
    <client-timeout>30</client-timeout>
    <header-timeout>15</header-timeout>
    <source-timeout>10</source-timeout>
  </limits>

  <authentication>
    <source-password>hackme</source-password> <!-- change as needed -->
    <admin-user>admin</admin-user>
    <admin-password>admin123</admin-password>
  </authentication>

  <listen-socket>
    <port>8080</port> <!-- will be replaced by start.sh -->
    <bind-address>0.0.0.0</bind-address>
  </listen-socket>

  <mount>
    <mount-name>/stream</mount-name>
    <max-listeners>100</max-listeners>
    <fallback-mount>/</fallback-mount>
    <fallback-override>1</fallback-override>
    <hidden>0</hidden>
  </mount>

  <security>
    <chroot>0</chroot>
  </security>

  <mime-types>
    <mime-type type="application/ogg" file-ext=".ogg"/>
    <mime-type type="audio/mpeg" file-ext=".mp3"/>
    <mime-type type="audio/aacp" file-ext=".aac"/>
    <mime-type type="audio/x-mpegurl" file-ext=".m3u"/>
    <mime-type type="application/xspf+xml" file-ext=".xspf"/>
  </mime-types>

  <fileserve>1</fileserve>

  <paths>
    <basedir>/usr/share/icecast</basedir>
    <webroot>/usr/share/icecast/web</webroot>
    <adminroot>/usr/share/icecast/admin</adminroot>
    <logdir>/tmp</logdir>
  </paths>

  <logging>
    <accesslog>access.log</accesslog>
    <errorlog>error.log</errorlog>
    <loglevel>3</loglevel>
  </logging>

  <changeowner>
    <user>nobody</user>
    <group>nogroup</group>
  </changeowner>

</icecast>
